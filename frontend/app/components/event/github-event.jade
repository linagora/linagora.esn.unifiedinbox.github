.github-event(ng-if='::ctrl.supported')
  .github-avatar
    img(ng-src='{{ ::ctrl.event.actor.avatar_url }}', alt='#{__("Github Avatar")}')
    i.mdi.mdi-github-box

  .github-text(ng-switch="ctrl.event.type")
    .watch(ng-switch-when="WatchEvent")
      span #[a(ng-href='https://github.com/{{ ::ctrl.event.actor.display_login }}') {{ ::ctrl.event.actor.display_login }}] starred #[a(ng-href='http://github.com/{{::ctrl.event.repo.name}}') {{::ctrl.event.repo.name}}]
    .create(ng-switch-when="CreateEvent")
      span #[a(ng-href='https://github.com/{{ ::ctrl.event.actor.display_login }}') {{ ::ctrl.event.actor.display_login }}] created repository #[a(ng-href='http://github.com/{{::ctrl.event.repo.name}}') {{::ctrl.event.repo.name}}]
    .issuecomment(ng-switch-when="IssueCommentEvent")
      span #[a(ng-href='https://github.com/{{ ::ctrl.event.actor.display_login }}') {{ ::ctrl.event.actor.display_login }}] commented on issue {{::ctrl.event.repo.name}}/{{::ctrl.event.payload.issue.number}}
    .push(ng-switch-when="PushEvent")
      span #[a(ng-href='https://github.com/{{ ::ctrl.event.actor.display_login }}') {{ ::ctrl.event.actor.display_login }}] pushed to {{::ctrl.event.payload.ref}} at #[a(ng-href='http://github.com/{{::ctrl.event.repo.name}}') {{::ctrl.event.repo.name}}]
    .fork(ng-switch-when="ForkEvent")
      span #[a(ng-href='https://github.com/{{ ::ctrl.event.actor.display_login }}') {{ ::ctrl.event.actor.display_login }}] forked #[a(ng-href='http://github.com/{{::ctrl.event.repo.name}}') {{::ctrl.event.repo.name}}] to #[a(ng-href='http://github.com/{{::ctrl.event.payload.forkee.full_name}}') {{::ctrl.event.payload.forkee.full_name}}]
    .pullrequestreviewcomment(ng-switch-when="PullRequestReviewCommentEvent")
      span #[a(ng-href='https://github.com/{{ ::ctrl.event.actor.display_login }}') {{ ::ctrl.event.actor.display_login }}] commented on pull request #[a(ng-href='http://github.com/{{::ctrl.event.repo.name}}') {{::ctrl.event.repo.name}}] XXX

  .github-date
    span {{ ::ctrl.event.date | date: group.dateFormat }}
